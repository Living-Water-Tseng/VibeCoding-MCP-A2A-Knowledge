                    <h2>ËÄÉË©¶ÁµêÊûú</h2>
                    <div class="score">${score} / 90</div>
                    <p>Á≠îÂ∞ç ${results.filter(r => r.isCorrect).length} È°åÔºåÁ≠îÈåØ ${results.filter(r => !r.isCorrect).length} È°å</p>
                    
                    <div class="answers">
                        <h3>Ë©≥Á¥∞Á≠îÊ°à</h3>
            `;
            
            results.forEach(result => {
                const statusClass = result.isCorrect ? 'correct' : 'incorrect';
                const statusText = result.isCorrect ? '‚úì Ê≠£Á¢∫' : '‚úó ÈåØË™§';
                
                resultHTML += `
                    <div class="answer-item">
                        <div>
                            <strong>Á¨¨ ${result.question} È°åÔºö</strong>${result.description}<br>
                            <small>ÊÇ®ÁöÑÁ≠îÊ°àÔºö${result.userAnswer} | Ê≠£Á¢∫Á≠îÊ°àÔºö${result.correctAnswer}</small>
                        </div>
                        <div class="${statusClass}">${statusText}</div>
                    </div>
                `;
            });
            
            resultHTML += `
                    </div>
                    <button class="submit-btn" onclick="restartExam()">ÈáçÊñ∞ËÄÉË©¶</button>
                </div>
            `;
            
            resultsDiv.innerHTML = resultHTML;
        }

        function restartExam() {
            // Ê∏ÖÈô§ÊâÄÊúâÈÅ∏È†Ö
            const radioButtons = document.querySelectorAll('input[type="radio"]');
            radioButtons.forEach(radio => radio.checked = false);
            
            // È°ØÁ§∫ËÄÉË©¶Ë°®ÂñÆÔºåÈö±ËóèÁµêÊûú
            document.getElementById('exam-form').classList.remove('hidden');
            document.getElementById('results').classList.add('hidden');
            
            // ÊªæÂãïÂà∞È†ÇÈÉ®
            window.scrollTo(0, 0);
        }

        function showCode() {
            const modal = document.getElementById('codeModal');
            const sourceCodeDiv = document.getElementById('sourceCode');
            
            // Áç≤ÂèñÁï∂ÂâçÈ†ÅÈù¢ÁöÑ HTML Ê∫êÁ¢º
            const currentHTML = document.documentElement.outerHTML;
            sourceCodeDiv.textContent = currentHTML;
            
            modal.style.display = 'block';
        }

        function closeModal() {
            document.getElementById('codeModal').style.display = 'none';
        }

        function copyCode() {
            const sourceCode = document.getElementById('sourceCode').textContent;
            
            navigator.clipboard.writeText(sourceCode).then(() => {
                const copyBtn = document.querySelector('.copy-btn');
                const originalText = copyBtn.textContent;
                copyBtn.textContent = 'Â∑≤Ë§áË£ΩÔºÅ';
                copyBtn.style.background = 'linear-gradient(135deg, #27ae60, #2ecc71)';
                
                setTimeout(() => {
                    copyBtn.textContent = originalText;
                    copyBtn.style.background = 'linear-gradient(135deg, #3498db, #2980b9)';
                }, 2000);
            }).catch(err => {
                alert('Ë§áË£ΩÂ§±ÊïóÔºåË´ãÊâãÂãïÈÅ∏ÂèñÊñáÂ≠óË§áË£Ω');
            });
        }

        // ÈªûÊìäÊ®°ÊÖãÁ™óÂè£Â§ñÈÉ®ÈóúÈñâ
        window.onclick = function(event) {
            const modal = document.getElementById('codeModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        }
    </script>
</body>
</html>
